---
import type { CollectionEntry } from 'astro:content';

interface Props {
  talk: CollectionEntry<'talks'>;
}

const { talk } = Astro.props;
const { title, description, date } = talk.data;

// Format date
const formattedDate = new Date(date).toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<div class="pb-8">
  <div class="pt-8 flex items-center gap-x-4 text-sm">
    <time class="uppercase font-bold italic">
      {formattedDate}
    </time>
  </div>
  <div class="group relative">
    <h2 class="mt-3 text-xl font-semibold leading-6 underline group-hover:text-pink">
      <a href={`/talks/${talk.slug}`}>
        <span class="absolute inset-0"></span>
        {title}
      </a>
    </h2>
    <p class="mt-5 line-clamp-3 text-md leading-6">
      {description}
    </p>
  </div>
</div>
